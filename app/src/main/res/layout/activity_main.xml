<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"

        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:padding="5dp"        android:layout_marginLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:text="ENGINEERING EDUCATION"

        android:textStyle="bold" />


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:src="@drawable/coding"
            android:layout_weight="1"
            android:id="@+id/coding" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:id="@+id/hacking"
            android:src="@drawable/hacking"

            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dip"

        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:id="@+id/photoshop"
            android:src="@drawable/photoshop"

            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dip"
            android:id="@+id/robotics"
            android:src="@drawable/robotics"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>











</LinearLayout>